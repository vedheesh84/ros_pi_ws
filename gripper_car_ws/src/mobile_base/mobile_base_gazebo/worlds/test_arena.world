            </box>
          </geometry>
          <material>
            <ambient>0.8 0.8 0.2 1</ambient>
            <diffuse>0.9 0.9 0.3 1</diffuse>
          </material>
        </visual>
      </link>
    </model>

    <!-- Center wall obstacle -->
    <model name="obstacle_wall_center">
      <static>true</static>
      <pose>0 0 0.4 0 0 0.785</pose>
      <link name="link">
        <collision name="collision">
          <geometry>
            <box>
              <size>2 0.15 0.8</size>
